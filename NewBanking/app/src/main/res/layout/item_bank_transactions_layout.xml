<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp"
    android:background="@drawable/retangle_corners_solid"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivFriendUserImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_avatar_avocado_food_scream_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvFriendUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Transaction.Title"
        android:layout_marginStart="@dimen/space_M"
        app:layout_constraintTop_toTopOf="@id/ivFriendUserImage"
        app:layout_constraintStart_toEndOf="@id/ivFriendUserImage"
        android:text="Sarah Hanrrington"/>

    <TextView
        android:id="@+id/tvCardDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Transaction.Description"
        android:layout_marginStart="@dimen/space_M"
        app:layout_constraintBottom_toBottomOf="@id/ivFriendUserImage"
        app:layout_constraintStart_toEndOf="@id/ivFriendUserImage"
        android:text="4th Jan 2022"/>

    <TextView
        android:id="@+id/tvBalanceValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Transaction.Title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="+ $25.00"/>
</androidx.constraintlayout.widget.ConstraintLayout>